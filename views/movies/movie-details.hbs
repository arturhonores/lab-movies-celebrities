<div class="container pt-5 mt-5">
  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-5 image-details">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h5 class="card-title fw-bold text-uppercase">{{title}}</h5>
              <p class="card-text"><small
                  class="text-body-secondary text-uppercase"
                >{{genre}}</small></p>
              <p class="card-text">PLOT:</p>
              <p class="card-text text-secondary">{{plot}}</p>
              <p class="card-text">CAST:</p>
              {{#each cast}}
                <p class="card-text mb-1">Name: {{this.name}}.</p>
                <p class="card-text mb-1">Occupation: {{this.occupation}}.</p>
                <p class="card-text">Catch phrase:
                  {{this.catchPhrase}}.</p>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>