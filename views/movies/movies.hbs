<div class="container mt-5 pt-5">
  <h1>Movies List</h1>
  <hr />
  <table class="table align-middle mt-5">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center">Title</th>
        <th scope="col" class="text-center">Genre</th>
        <th scope="col" class="text-center">Plot</th>
        <th scope="col" class="text-center">Cast</th>
        <th scope="col" class="text-center">Edit</th>
        <th scope="col" class="text-center">Delete</th>
      </tr>
    </thead>
    {{#each movies}}
      <tbody>
        <tr>
          <th scope="row" class="text-center">{{this.counter}}</th>
          <td class="text-center"><a
              href="/movies/{{id}}"
              class="link-underline-dark text-dark"
            >{{title}}</a></td>
          <td class="text-center">{{genre}}</td>
          <td class="text-center">{{plot}}</td>
          <td class="text-center">
            {{#each cast}}
              {{this.name}}{{#unless @last}}, {{/unless}}
            {{/each}}
          </td>
          <td class="text-center"><a
              href="/movies/{{id}}/edit"
              class="btn btn-warning text-white"
            >edit</a></td>
          <td class="text-center">
            <form
              action="/movies/{{id}}/delete"
              method="POST"
              style="margin-bottom:0"
            >
              <input type="submit" value="delete" class="btn btn-danger" />
            </form></td>
        </tr>
      </tbody>
    {{/each}}
  </table>
</div>